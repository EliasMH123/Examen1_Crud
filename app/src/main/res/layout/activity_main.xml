<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="80dp">

        <ImageView
            android:layout_marginLeft="30dp"
            android:id="@+id/imageView2"
            android:layout_width="199dp"
            android:layout_height="220dp"
            android:paddingBottom="20dp"
            app:srcCompat="@mipmap/usermodificado" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Login_txtCorreo"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/input_email"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:drawablePadding="7dp"
            android:hint="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/caja"
            android:padding="5dp" />

        <TextView
            android:text="@string/Login_txtClave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/input_clave"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:drawablePadding="7dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:padding="5dp"
            android:background="@drawable/caja"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#05751E"
            android:text="@string/Login_btnEntrar"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            />
        <TextView
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:id="@+id/txtCrearCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrese" />


    </LinearLayout>

</ScrollView>