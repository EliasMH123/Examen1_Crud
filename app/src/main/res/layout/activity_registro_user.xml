<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroUser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="80dp">

        <TextView
            android:layout_marginBottom="50dp"
            android:layout_gravity="center"
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro"
            android:textColor="#983F3F"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Login_txtUser"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/registro_usuario"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="7dp"
            android:hint="Usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/caja"
            android:padding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Login_txtCorreo"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/registro_email"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:drawablePadding="7dp"
            android:hint="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/caja"
            android:padding="5dp" />

        <TextView
            android:text="@string/Login_txtClave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/registro_clave"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:drawablePadding="7dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:background="@drawable/caja"/>

        <TextView
            android:text="@string/confirmar_clave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/confirmar_clave"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:drawablePadding="7dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:padding="5dp"
            android:background="@drawable/caja"/>

        <Button
            android:id="@+id/crear_cuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#05751E"
            android:text="Registrarse"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            />
        <TextView
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:id="@+id/txtvolver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vover" />


    </LinearLayout>

</ScrollView>